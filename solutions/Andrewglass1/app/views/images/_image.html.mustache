<script id="image_template" type="text/html">
  <li class="post">
    <h2 class="points" id="points_{{id}}">{{points}}</h2>
    <a class="addpoints" id="{{id}}"><img class="thumb" src="assets/thumb.png"></a>
    <img src='{{content}}'/>
    <p class="comment">{{comment}}</p>
    <p class="posted"> posted {{created_at}} ago </p>
    <a class="refeed" id="{{id}}">Refeed me!</a>
  </li>
</script>