<script id="tweet_template" type="text/html">
  <li class="post">
    <h2 class="points" id="points_{{id}}">{{points}}</h2>
    <a class="addpoints" id="{{id}}"><img class="thumb" src="assets/thumb.png"></a>
    <p><img class="service" src="assets/twitter_64.png"> @{{handle}} {{content}} </p>
    </br>
    </br>
    <p class="posted">tweeted {{post_time}} ago</p>
    <a class="refeed" id="{{id}}">Refeed me!</a>
  </li>
</script>