<% if params["page"] == nil %>
  $('#growls').html('<%=j render(@growls) %>').fadeIn();
  $('#page').html("<%= j paginate(@growls) %>");
  $(window).scroll();
<% else %>
  $('#growls').append('<%=j render(@growls) %>');
<% end %>
$('.pagination').replaceWith('<%= j paginate(@growls) %>');
if ($('.pagination .next').length == 0)
  $('.pagination').hide();