<%= simple_form_for post, url: posts_path, method: :post do |f| %>
  <%= f.input :title %>
  <%= f.input :content, :as => :text, :input_html => { :rows => 5 }, :label => "Message" %>
  <%= f.input :comment, :as => :text, :input_html => { :rows => 5 } %>
  <%= f.input :type, :as => :hidden, :input_html => { :value => "TextPost" } %>
  <%= f.submit "Post", :class => 'btn' %>
<% end %>