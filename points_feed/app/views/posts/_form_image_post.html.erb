<%= simple_form_for post, url: posts_path, method: :post do |f| %>
  <%= f.input :title %>
  <%= f.input :content, :label => "Image Url", :input_html => { :rows => 3 } %>
  <%= f.input :comment, :as => :text, :input_html => { :rows => 5 } %>
  <%= f.input :file %>
  <%= f.input :type, :as => :hidden, :input_html => { :value => "ImagePost" } %>
  <%= f.submit "Post Image", :class => 'btn' %>
<% end %>