<div class="row">
  <div class="span12">
    <div class="header">
      <h1>Dashboard</h1>
        <%= "Email: #{@current_user.email}" %><br>
        <%= "Display Name: #{@current_user.display_name}" %><br>
        <%= link_to "Edit", edit_user_registration_path %><br>
        <br>
      </div>
    <div class="row">
      <br>
      <div class="span3">
        <div class="dashboard-left">
          <ul id='post_tabs' class="nav nav-pills">
            <li><a href="#text_post" data-toggle="tab">Text</a></li>
            <li><a href="#link_post" data-toggle="tab">Link</a></li>
            <li><a href="#image_post" data-toggle="tab">Image</a></li>
          </ul>

          <div class="tab-content">
            <div class="tab-pane active" id="text_post">
              <%= render "posts/form_text_post", :post => @post %>
            </div>
            <div class="tab-pane active" id="link_post">
              <%= render "posts/form_link_post", :post => @post %>
            </div>
            <div class="tab-pane active" id="image_post">
              <%= render "posts/form_image_post", :post => @post %>
            </div>
          </div>
        </div>
        <br>
      </div>
      <div class="span9">
        <% @posts.each do |post| %>
          <%= render "posts/show_#{post.template}", :post => post %>
          <hr />
        <% end %>
      </div>
    </div>
  </div>
</div>