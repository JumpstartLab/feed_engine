<%= form_for @link_item do |f| %>
  <%= f.text_field :url, :placeholder => "URL", :class => "dashboard-text-field" %>
  <%= f.text_area :comment, :placeholder => "Comment", :size => "40x10", :class => "dashboard-text-area" %>
  <%= f.button "Linkify", :class => "link-item-submit-button" %>
<% end %>
