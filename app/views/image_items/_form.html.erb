<%= simple_form_for @image_item, :remote => true do |f| %>
  <%= f.input :url, :placeholder => "Image Url", :label_html => {:class => "text-item-label"}, 
              :input_html => {:class => "dashboard-text-field"} %>
  <%= f.input :comment, :placeholder => "Comment", :label_html => {:class => "text-item-label"}, 
              :input_html => {:class => "link-item-text-area"} %>
  <%= f.button :submit, "Imagify", :class => "btn-primary btn-large text-item-submit" %>
<% end %>
