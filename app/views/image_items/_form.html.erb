<%= simple_form_for @image_item do |f| %>
  <%= f.input :url, :placeholder => "Image URL", :class => "dashboard-text-field" %>
  <%= f.input :comment, :placeholder => "Comment", :size => "40x10", :class => "dashboard-text-area" %>
  <%= f.submit "Imagify", :class => "link-item-submit-button" %>
<% end %>
