<div class="post well">
  {{type}}
  {{#image_url}}
    <div class="thumbnail">
      <img src={{image_url}}>
    </div>
  {{/image_url}}
  {{#comment}}
    {{comment}}
  {{/comment}}
  {{#text}}
    {{text}}
  {{/text}}
  {{#link_url}}
    <br />
    <a href="{{link_url}}" target="_blank">{{link_url}}</a>
  {{/link_url}}
  <br />
  {{#github_type}}
    {{github_type}}
  {{/github_type}}
  <br />
  {{#repo_name}}
    {{repo_name}}
  {{/repo_name}}
  <br />
  {{#repo_url}}
    {{repo_url}}
  {{/repo_url}}
</div>