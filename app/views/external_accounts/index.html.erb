<br/>
<div class="span12 external-services-container">
  <h1>External Services</h1>
  <br/>

  <div>
    <div class="span3">
      <%= image_tag "/assets/twitter-bird.png" %>
      <span class="twitter-label">Twitter</span>
      <% if twitter_connected? %>
        <%= link_to "Disconnect", "#", :class => "btn btn-large" %>
      <% else %>
        <%= link_to "Connect", "users/auth/twitter", :class => "btn btn-large" %>
      </div>
    <% end %>
  </div>
  <div class="span3">
    <%= image_tag "/assets/octocat.png" %>
    <span class="github-label">Github</span>
    <% if github_connected? %>
      <%= link_to "Disconnect", "#", :class => "btn btn-large" %>
    <% else %>
      <%= link_to "Connect", "users/auth/github", :class => "btn btn-large" %>
    <% end %>
  </div>
  <div class="span3 service-continue-container">
    <%= link_to "Continue", external_accounts_skip_path, :class => "service-btn-primary btn-large" %>
  </div>
</div>

