<div class="post well">
  <div class="pull-right">
    <a href="/refeeds?post_id={{id}}&post_type={{type}}" data-method="post" rel="nofollow">Refeed</a>
    <a href="/points/{{id}}?post_type={{type}}" data-method="put" rel="nofollow">Points!</a>
  </div>
  {{#image_url}}
    <div class="thumbnail">
      <img src={{image_url}}>
    </div>
  {{/image_url}}
  {{#comment}}
    {{comment}}
  {{/comment}}
  {{#text}}
    {{text}}
  {{/text}}
  {{#link_url}}
    <br />
    <a href="{{link_url}}" target="_blank">{{link_url}}</a>
  {{/link_url}}
  {{type}}
</div>
