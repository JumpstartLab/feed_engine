
<div class=" item-container-body" id="item_<%= item.id %>">
  <div class="item-header">
    <%= image_tag gravatar_url(item.user), :class => "item-user-image" %>
    <span class="item-header-user"><%= link_to item.streamable.user.display_name, root_url(:subdomain => item.streamable.user.display_name) %></span>
    
    <span class="points-container">
      <% unless current_user && (item.user.display_name == current_user.display_name) %>     
        <%= link_to points_path(:item_type => item.streamable_type, :item_id => item.streamable_id), :method => :post, :id => "item_#{item.id}" do %>
          <span class="entypo-icon">8</span>
          <span class="points"><%= item.streamable.points.size %></span>
        <% end %>
      <% else %>
        <span class="entypo-icon">8</span>
        <span class="points"><%= item.streamable.points.size %></span>
      <% end %>
    </span>
  </div>
  <br/>
  <% item_class = item.streamable.class.to_s.underscore %>

  <%= render :partial => "#{item_class.pluralize}/#{item_class}", :locals => { :item => item.streamable} %>

  <div class=" item-footer">


    <% if item_class == "TextItem" %>
      <span class="raphael-icon post-logo">E</span>
    <% elsif item_class == "ImageItem" %>
      <span class="raphael-icon post-logo">N</span>
    <% elsif item_class == "LinkItem" %>
      <span class="raphael-icon post-logo">Ãˆ</span>
    <% elsif item_class == "TwitterItem" %>
      <span class="raphael-icon twitter-logo">^</span>
    <% elsif item_class == "GithubItem" %>
      <span class="raphael-icon github-logo">U</span>
    <% end %>
    <span class="item-time">
      <%= time_ago_in_words(item.created_at) %> ago
      <span class="refeed-container">
        <% if item.refeed %>
          - 
          <span class="raphael-icon refeed-logo">0</span>
          <span>Retrouted by <%= item.user.display_name %></span>
          <br/>
        </span>
      <% end %>
    </span>
  </div>


</div>
