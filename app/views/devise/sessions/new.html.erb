<div class="span3 offset3 login-container">
<h1 class="login-title">Trout</h1>

<br/>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.email_field :email, :placeholder => "Email", :class => "login-fields" %>

  <%= f.password_field :password, :placeholder => "Password", :class => "login-fields" %>

  <div><%= f.submit "Log In", :class => "offset1 login-submit" %></div>
<% end %>
</div>
