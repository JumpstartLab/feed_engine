<%= simple_form_for @text_item, :id => "text_item", :remote => true do |f| %>
  <%= f.input :body, :label_html => {:class => "text-item-label"}, 
              :input_html => {:class => "text-item-text-area"} %>
  <%= f.button :submit, "Textify", :id => "text-item-submit", :class => "btn-primary btn-large" %>
<% end %>
