.post
  img.post-avatar src="{{gravatar_url}}"
  .well
    .post-text
      h2 {{title}}
      p  {{body}}
    .post-actions
      li
        a.btn href="/refeeds?post_id={{id}}" data-method="post" rel="nofollow"
          i.icon-retweet  Refeed
      li
        a.btn href="/points/?post_id={{id}}&user_id=#{user.id}" data-method="post" rel="nofollow"
          i.icon-heart Points!
      li
         span.btn
          i.icon-pencil | {{type}}
      li
        span.btn
          p {{total_points}}