  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'capybara'
  gem 'guard-rspec'
  gem 'faker'
end

group :test do
  gem "rack-test", require: "rack/test"
  gem 'guard-spork'
  gem 'spork'
  gem 'launchy'
end

group :production do
  gem 'thin'
  gem 'pg'
end

